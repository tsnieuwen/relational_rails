<h1>New Customer</h1>
<form action="/resorts/<%= @resort_id %>/customers" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="name">Name:</label>
  <input type="text" id="name" name='customer[name]'><br><br>
  <label for="age">Age:</label>
  <input type="integer" id="age" name='customer[age]'><br><br>
  <label for="equipment">Rented Equipment?:</label>
  <input type="boolean" id="equipment" name='customer[equipment]'><br><br>
  <input type="submit" value="Create Customer">
</form>
